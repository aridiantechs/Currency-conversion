{
	"name": "Load USD to PKR Currency Conversion Hourly Data",
	"properties": {
		"activities": [
			{
				"name": "Currency Rate API to SQL Table",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"additionalColumns": [
							{
								"name": "Date",
								"value": {
									"value": "@utcNow('yyyy-MM-dd HH:mm:ss')",
									"type": "Expression"
								}
							}
						],
						"storeSettings": {
							"type": "HttpReadSettings",
							"requestMethod": "GET"
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "AzureSqlSink",
						"writeBehavior": "insert",
						"sqlWriterUseTableLock": false,
						"disableMetricsCollection": false
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['rates']['PKR']"
								},
								"sink": {
									"name": "Price",
									"type": "Double"
								}
							},
							{
								"source": {
									"path": "$['Date']"
								},
								"sink": {
									"name": "Date",
									"type": "DateTime"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "srcUsdtoPkrRateAPI",
						"type": "DatasetReference",
						"parameters": {
							"base": "USD",
							"app_id": "eff210300b0149628cca637a0dfd538c",
							"symbols": "PKR"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "tgtUsdToPkrRateTbl",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Round Minutes",
				"type": "Script",
				"dependsOn": [
					{
						"activity": "Currency Rate API to SQL Table",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"linkedServiceName": {
					"referenceName": "LS_des_POC",
					"type": "LinkedServiceReference"
				},
				"typeProperties": {
					"scripts": [
						{
							"type": "Query",
							"text": "update [dbo].[CurrencyRate]\nset [Date]=DATEADD(HOUR, DATEDIFF(HOUR, '20000101',Date),'20000101') "
						}
					]
				}
			}
		],
		"annotations": [],
		"lastPublishTime": "2022-06-24T09:07:04Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}